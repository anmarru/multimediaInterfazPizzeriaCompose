<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools">
    <!-- se le da permiso para acceso a internet y poder acceder a los clientes/ pedidos-->
   <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logopizzeria"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logopizzeria"
        android:supportsRtl="true"
        android:theme="@style/Theme.Composepizzeria"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Pizzeria"
            android:theme="@style/Theme.Composepizzeria">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>